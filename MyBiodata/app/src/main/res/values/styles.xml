<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="dialogCornerRadius">20dp</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <!-- BottomSheetDialogTheme (for Rounded Shape) -->
    <style name="BottomSheedDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyle</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="bottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Divider -->
    <style name="horizontal_divider">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <!-- Transparent status bar replacement -->
    <style name="status_bar_transparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">26dp</item>
    </style>

</resources>
